<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Start Foreground Service"/>

    <Button
        android:id="@+id/button_check_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_hours"
        android:onClick="startHoursActivity"
        />
    <Button
        android:id="@+id/button_check_hours_monthly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_monthly"
        android:onClick="startMonthlyHoursActivity"
        />

    <Button
        android:id="@+id/button_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_email"
        android:textAppearance="@android:style/TextAppearance.Widget.Button"
        android:onClick="sendEmail"
        />

</LinearLayout>